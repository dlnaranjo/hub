{# empty Twig template #}

{% extends 'head_Template.html.twig' %}

{% block color %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if app.user.roles[0] == "ROLE_BUSINESS"  %}
            <link href="{{asset('bundles/hub/css/skins/pink.css')}}" rel="stylesheet">
        {% elseif app.user.roles[0] == "ROLE_PROFESSIONAL"  %}
            <link href="{{asset('bundles/hub/css/skins/orange.css')}}" rel="stylesheet">
        {% elseif app.user.roles[0] == "ROLE_USER" %}   
            <link href="{{asset('bundles/hub/css/skins/blue.css')}}" rel="stylesheet">
        {% else %}
            <link href="{{asset('bundles/hub/css/skins/red.css')}}" rel="stylesheet">
        {% endif %}    
    {% endif %}
{% endblock %}

{% block content %}
    <!-- ================ -->
    <section class="main-container">

        <div class="container">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">

                    <!-- page-title start -->
                    <!-- ================ -->
                    <h1 class="page-title">Professionals</h1>
                    <div class="separator-2"></div>
                    <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptas nulla suscipit <br class="hidden-sm hidden-xs"> unde rerum mollitia dolorum.</p>
                    <!-- page-title end -->

                    <!-- isotope filters start -->
                    <div class="filters">
                        <ul class="nav nav-pills">
                            <li class="active"><a href="#" data-filter="*">All</a></li>
                                {% for category in categories%}

                                <li><a href="#" data-filter=".{{category.getIdcategory()}}">{{category.getCategoryname()}}</a></li>
                                
                                {%endfor%}
                        </ul>
                    </div>
                    <!-- isotope filters end -->

                    <!-- portfolio items start -->
                    <div class="isotope-container row">
                        {%for professional in professionals %}
                        <div class="col-md-4 col-sm-6 isotope-item {{professional.getIdcategory().getIdcategory()}}">
                            <div class="image-box">
                                <div class="overlay-container">
                                    <img src="{{asset("bundles/hub/perfil/" ~ professional.getUser().getPerfilphoto() )}}" alt="">
                                    <div class="overlay">
                                        <div class="overlay-links">
                                             <a href="{{path('hub_show_professional', {'user': professional.getUser().getUser()})}}"><i class="fa fa-link"></i></a>
                                            <a href="{{asset("bundles/hub/perfil/" ~ professional.getUser().getPerfilphoto() )}}" class="popup-img"><i class="fa fa-search-plus"></i></a>
                                        </div>
                                        <span>View Detail</span>
                                    </div>
                                </div>
                                <div class="image-box-body">
                                    <h3 class="title"><a  href="{{path('hub_show_professional', {'user': professional.getUser().getUser()})}}">{{professional.getFirstname() ~ " " ~ professional.getLastname() }}</a></h3>
                                    <p>{{professional.getPresentation()}}</p>
                                    <a  href="{{path('hub_show_professional', {'user': professional.getUser().getUser()})}}"class="link"><span>Read More</span></a>
                                </div>
                            </div>
                        </div>
                       {% endfor %}
                    </div>
                <!-- main end -->

            </div>
        </div>
    </section>
    <!-- main-container end -->

    <!-- section start -->
    <!-- ================ -->
    <div class="section gray-bg text-muted footer-top clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="owl-carousel clients">
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-1.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-2.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-3.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-4.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-5.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-6.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-7.png')}}" alt=""></a>
                        </div>
                        <div class="client">
                            <a href="#"><img src="{{asset('bundles/hub/images/client-8.png')}}" alt=""></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <blockquote class="inline">
                        <p class="margin-clear">Design is not just what it looks like and feels like. Design is how it works.</p>	
                        <footer><cite title="Source Title">Steve Jobs </cite></footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
    <!-- section end -->
{% endblock %}
